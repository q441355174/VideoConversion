{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information",
      "VideoConversion": "Debug",
      "VideoConversion.Services.VideoConversionService": "Information",
      "VideoConversion.Services.DatabaseService": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    },
    "File": {
      "Path": "logs/videoconversion-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 10485760,
      "IncludeScopes": true
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 104857600
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=videoconversion.db"
  },
  "VideoConversion": {
    "UploadPath": "uploads",
    "OutputPath": "outputs",
    "MaxFileSize": 32212254720,
    "AllowedExtensions": [
      ".mp4", ".avi", ".mov", ".mkv", ".wmv", ".flv", ".webm", ".m4v", ".3gp",
      ".mpg", ".mpeg", ".ts", ".mts", ".m2ts", ".vob", ".asf", ".rm", ".rmvb"
    ],
    "CleanupIntervalMinutes": 60,
    "MaxConcurrentConversions": 2,
    "UploadTimeoutMinutes": 120,
    "ChunkSize": 52428800,
    "ProgressUpdateIntervalMs": 500,
    "ProgressUpdateThreshold": 5242880,
    "EnableChunkMD5Validation": false,
    "EnableFinalFileMD5Validation": false,
    "QuickIdThresholdMB": 500
  }
}
