<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VideoConversion_Client.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        
        <!-- 自定义样式 -->
        <Style Selector="Border.section">
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="0,10" />
        </Style>
        
        <Style Selector="Border.file-section">
            <Setter Property="Background" Value="AliceBlue" />
        </Style>
        
        <Style Selector="Border.settings-section">
            <Setter Property="Background" Value="LightGreen" />
        </Style>
        
        <Style Selector="Border.progress-section">
            <Setter Property="Background" Value="LightYellow" />
        </Style>
        
        <Style Selector="Border.history-section">
            <Setter Property="Background" Value="LightCyan" />
        </Style>
        
        <Style Selector="Border.server-section">
            <Setter Property="Background" Value="Lavender" />
        </Style>
        
        <Style Selector="Border.download-section">
            <Setter Property="Background" Value="LightGoldenrodYellow" />
        </Style>
        
        <Style Selector="Border.app-section">
            <Setter Property="Background" Value="LightSeaGreen" />
        </Style>
        
        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>
        
        <Style Selector="TextBlock.page-title">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,20" />
        </Style>
        
        <Style Selector="Button.nav-button">
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5" />
        </Style>
        
        <Style Selector="Button.action-button">
            <Setter Property="Padding" Value="25,12" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="10" />
        </Style>
        
        <Style Selector="TextBox.input-field">
            <Setter Property="Height" Value="35" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White" />
        </Style>
        
        <Style Selector="ComboBox.input-field">
            <Setter Property="Height" Value="35" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="White" />
        </Style>
    </Application.Styles>
</Application>
