<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VideoConversion_Client.Views.CurrentTaskView">

    <!-- 当前转换任务 -->
    <Border Name="CurrentTaskSection" 
            Classes="modern-card task-card"
            IsVisible="False">
        <StackPanel Spacing="15">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="🔄" FontSize="18" />
                <TextBlock Text="当前转换任务" Classes="card-title" />
            </StackPanel>
            
            <!-- 任务基本信息 -->
            <StackPanel Spacing="8">
                <TextBlock Name="CurrentTaskName" 
                           Text="任务名称" 
                           FontWeight="Bold" 
                           FontSize="14" />
                <TextBlock Name="CurrentTaskId" 
                           Text="任务ID" 
                           FontSize="11" 
                           Foreground="#7f8c8d" />
            </StackPanel>
            
            <!-- 文件信息 -->
            <Border Classes="info-panel">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="原始文件" FontSize="11" Foreground="#7f8c8d" />
                        <TextBlock Name="OriginalFileName" Text="-" FontWeight="Bold" />
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Margin="0,8,0,0">
                        <TextBlock Text="输出格式" FontSize="11" Foreground="#7f8c8d" />
                        <TextBlock Name="OutputFormat" Text="-" FontWeight="Bold" />
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 进度条 -->
            <StackPanel Spacing="8">
                <ProgressBar Name="ConversionProgressBar"
                             Height="12"
                             Maximum="100"
                             Value="0"
                             Classes="modern-progress conversion-progress" />
                <TextBlock Name="ConversionProgressText" 
                           Text="0%" 
                           HorizontalAlignment="Center" 
                           FontWeight="Bold" />
            </StackPanel>
            
            <!-- 详细状态信息 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="转换速度" FontSize="11" Foreground="#7f8c8d" />
                    <TextBlock Name="ConversionSpeed" Text="-" FontWeight="Bold" />
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="剩余时间" FontSize="11" Foreground="#7f8c8d" />
                    <TextBlock Name="RemainingTime" Text="-" FontWeight="Bold" />
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,0,0">
                    <TextBlock Text="已用时间" FontSize="11" Foreground="#7f8c8d" />
                    <TextBlock Name="ElapsedTime" Text="-" FontWeight="Bold" />
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,8,0,0">
                    <TextBlock Text="文件大小" FontSize="11" Foreground="#7f8c8d" />
                    <TextBlock Name="FileSize" Text="-" FontWeight="Bold" />
                </StackPanel>
            </Grid>
            
            <!-- 当前状态 -->
            <Border Name="TaskStatusAlert" Classes="status-alert">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ℹ️" />
                    <TextBlock Name="TaskStatus" Text="等待中..." />
                </StackPanel>
            </Border>
            
            <!-- 操作按钮 -->
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                <Button Name="CancelTaskButton"
                        Content="⏹️ 取消"
                        Classes="danger-button small-button"
                        Click="CancelTaskButton_Click" />
                <Button Name="RefreshTaskButton"
                        Content="🔄 刷新"
                        Classes="secondary-button small-button"
                        IsVisible="False"
                        Click="RefreshTaskButton_Click" />
                <Button Name="DownloadTaskButton"
                        Content="💾 下载"
                        Classes="success-button small-button"
                        IsVisible="False"
                        Click="DownloadTaskButton_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
