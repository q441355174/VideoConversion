<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VideoConversion_Client.Views.ConversionCompletedView">

    <UserControl.Styles>
        <!-- 状态切换按钮样式 -->
        <Style Selector="Button.status-toggle-button">
            <Setter Property="Background" Value="#f0f0f0" />
            <Setter Property="Foreground" Value="#666" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="25,10" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="2" />
        </Style>

        <Style Selector="Button.status-toggle-button.active">
            <Setter Property="Background" Value="#9b59b6" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="Button.status-toggle-button.inactive">
            <Setter Property="Background" Value="#f0f0f0" />
            <Setter Property="Foreground" Value="#666" />
        </Style>
    </UserControl.Styles>

    <Grid Margin="12">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 转换完成的文件列表区域 -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 列表标题栏 -->
                <Border Grid.Row="0"
                        Background="#f8f9fa"
                        BorderBrush="#e0e0e0"
                        BorderThickness="0,0,0,1"
                        CornerRadius="8,8,0,0"
                        Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 标题文字 -->
                        <TextBlock Grid.Column="0"
                                   Text="已完成的转换文件"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#333"
                                   VerticalAlignment="Center" />

                        <!-- 搜索区域 -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    VerticalAlignment="Center">
                            <!-- 搜索框 -->
                            <TextBox Name="SearchBox"
                                     Watermark="搜索文件..."
                                     MinWidth="180"
                                     Height="32"
                                     Padding="8,6"
                                     CornerRadius="6"
                                     BorderBrush="#ddd"
                                     BorderThickness="1"
                                     Background="White"
                                     FontSize="13"
                                     IsVisible="False"
                                     TextChanged="SearchBox_TextChanged" />

                            <!-- 搜索按钮 -->
                            <Button Name="SearchToggleBtn"
                                    Content="🔍"
                                    Background="Transparent"
                                    Foreground="#666"
                                    BorderThickness="0"
                                    Padding="8,6"
                                    CornerRadius="4"
                                    FontSize="14"
                                    ToolTip.Tip="搜索文件"
                                    Click="SearchBtn_Click">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#e9ecef" />
                                    </Style>
                                </Button.Styles>
                            </Button>

                            <!-- 打开文件夹按钮 -->
                            <Button Content="📁"
                                    Background="Transparent"
                                    Foreground="#666"
                                    BorderThickness="0"
                                    Padding="8,6"
                                    CornerRadius="4"
                                    FontSize="14"
                                    ToolTip.Tip="打开输出文件夹"
                                    Click="OpenFolderBtn_Click">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#e9ecef" />
                                    </Style>
                                </Button.Styles>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 文件列表内容区域 -->
                <Grid Grid.Row="1">
                    <!-- 完成的文件列表 -->
                    <ScrollViewer Name="FileListScrollViewer">
                        <StackPanel Name="CompletedFileListContainer"
                                    Spacing="6"
                                    Margin="16,16">
                            <!-- 完成的文件项将动态添加到这里 -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 空状态提示 -->
                    <StackPanel Name="EmptyStatePanel"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="16"
                                IsVisible="True">
                        <!-- 空状态图标 -->
                        <Border Background="#f0f0f0"
                                CornerRadius="50"
                                Width="100"
                                Height="100"
                                HorizontalAlignment="Center">
                            <TextBlock Text="📁"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Opacity="0.6" />
                        </Border>

                        <!-- 空状态文本 -->
                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                            <TextBlock Text="暂无已完成的转换文件"
                                       FontSize="18"
                                       FontWeight="Medium"
                                       Foreground="#666"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="完成转换后，文件将显示在这里"
                                       FontSize="14"
                                       Foreground="#999"
                                       HorizontalAlignment="Center" />
                        </StackPanel>

                        <!-- 操作提示 -->
                        <Button Content="开始转换文件"
                                Background="#9b59b6"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="20,10"
                                CornerRadius="6"
                                FontSize="14"
                                Click="StartConversionBtn_Click"
                                HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>

                <!-- 底部统计信息栏 -->
                <Border Grid.Row="2"
                        Background="#f8f9fa"
                        BorderBrush="#e0e0e0"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0,0,8,8"
                        Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Name="CompletedStatsText"
                                   Grid.Column="0"
                                   Text="0 项，0 GB"
                                   FontSize="13"
                                   Foreground="#666"
                                   VerticalAlignment="Center" />

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8">
                            <Button Content="清空列表"
                                    Background="Transparent"
                                    Foreground="#666"
                                    BorderThickness="1"
                                    BorderBrush="#ddd"
                                    Padding="12,6"
                                    CornerRadius="4"
                                    FontSize="12"
                                    Click="ClearListBtn_Click"
                                    IsVisible="False"
                                    Name="ClearListButton" />
                            <Button Content="打开输出文件夹"
                                    Background="#9b59b6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    CornerRadius="4"
                                    FontSize="12"
                                    Click="OpenOutputFolderBtn_Click" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
