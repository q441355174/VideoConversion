<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VideoConversion_Client.Views.ConversionCompletedView">

    <UserControl.Styles>
        <!-- 状态切换按钮样式 -->
        <Style Selector="Button.status-toggle-button">
            <Setter Property="Background" Value="#f0f0f0" />
            <Setter Property="Foreground" Value="#666" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="25,10" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="2" />
        </Style>

        <Style Selector="Button.status-toggle-button.active">
            <Setter Property="Background" Value="#9b59b6" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="Button.status-toggle-button.inactive">
            <Setter Property="Background" Value="#f0f0f0" />
            <Setter Property="Foreground" Value="#666" />
        </Style>
    </UserControl.Styles>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 顶部搜索区域 -->
        <StackPanel Grid.Row="0"
                   Name="SearchArea"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right"
                   Spacing="8"
                   Margin="0,0,0,8">
            <Button Content="📁"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="8"
                    Click="OpenFolderBtn_Click" />
            <Button Content="🔍"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="8"
                    Click="SearchBtn_Click" />
            <TextBox Name="SearchBox"
                     Watermark="搜索"
                     MinWidth="150"
                     IsVisible="False" />
        </StackPanel>

        <!-- 转换完成的文件列表 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 完成的文件列表 -->
            <ScrollViewer Grid.Row="0">
                <StackPanel Name="CompletedFileListContainer" Spacing="8" Margin="0,5">
                    <!-- 完成的文件项将动态添加到这里 -->
                </StackPanel>
            </ScrollViewer>

            <!-- 底部统计信息 -->
            <Border Grid.Row="1"
                    Background="#f8f9fa"
                    CornerRadius="8"
                    Padding="12,8"
                    Margin="0,10,0,0">
                <TextBlock Name="CompletedStatsText" 
                           Text="22 项，28.45 GB" 
                           FontSize="14" 
                           Foreground="#666" 
                           HorizontalAlignment="Center" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
