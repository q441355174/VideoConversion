<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VideoConversion_Client.Views.RecentTasksView">

    <!-- 最近任务 -->
    <Border Classes="modern-card">
        <StackPanel Spacing="15">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="📋" FontSize="18" />
                <TextBlock Text="最近任务" Classes="card-title" />
                <Button Name="RefreshRecentTasksButton"
                        Content="🔄"
                        Classes="icon-button"
                        Click="RefreshRecentTasksButton_Click" />
            </StackPanel>
            
            <ScrollViewer Name="RecentTasksScrollViewer" MaxHeight="300">
                <StackPanel Name="RecentTasksPanel" Spacing="8">
                    <!-- 空状态 -->
                    <Border Name="EmptyState" Classes="empty-state">
                        <StackPanel Spacing="10" HorizontalAlignment="Center">
                            <TextBlock Text="🎬" FontSize="32" HorizontalAlignment="Center" Foreground="#bdc3c7" />
                            <TextBlock Text="暂无转换任务" FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Text="请选择视频文件并开始转换" 
                                       FontSize="12" 
                                       Foreground="#7f8c8d" 
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Border>
</UserControl>
